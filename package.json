{
  "name": "kindling",
  "version": "1.0.0",
  "description": "Spark your draft - Bridge the gap between outline and prose",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "tauri": "tauri",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "lint:rust": "cd src-tauri && cargo clippy --all-targets --all-features -- -D warnings",
    "lint:all": "npm run lint && npm run lint:rust",
    "format": "prettier --write \"src/**/*.{ts,svelte,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,svelte,css,json}\"",
    "format:rust": "cd src-tauri && cargo fmt --all",
    "format:rust:check": "cd src-tauri && cargo fmt --all -- --check",
    "format:all": "npm run format && npm run format:rust",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:rust": "cd src-tauri && cargo test --all-features",
    "test:e2e": "npm test --prefix e2e",
    "test:e2e:ci": "npm run test:ci --prefix e2e",
    "test:e2e:docker": "docker compose -f e2e/docker-compose.yml up --build --abort-on-container-exit --exit-code-from e2e",
    "test:all": "npm run test && npm run test:rust",
    "check:all": "npm run check && npm run format:check && npm run lint && npm run format:rust:check && npm run lint:rust",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s",
    "changelog:all": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0",
    "prepare": "git config core.hooksPath .githooks"
  },
  "license": "MIT",
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-opener": "^2",
    "@tiptap/core": "^3.17.1",
    "@tiptap/extension-text-align": "^3.17.1",
    "@tiptap/extension-underline": "^3.17.1",
    "@tiptap/pm": "^3.15.3",
    "@tiptap/starter-kit": "^3.17.1",
    "lucide-svelte": "^0.563.0",
    "playwright": "^1.58.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/vite": "^4.1.0",
    "@tauri-apps/cli": "^2",
    "@testing-library/svelte": "^5.3.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@wdio/cli": "^9.23.3",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-commits-parser": "^6.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-svelte": "^3.14.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "^5.50.0",
    "svelte-check": "^4.3.6",
    "tailwindcss": "^4.1.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  }
}
