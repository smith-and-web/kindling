{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kindling",
  "version": "0.3.0-alpha",
  "identifier": "com.kindlingwriter.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Kindling",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "signingIdentity": "-"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "Spark your draft - Bridge the gap between outline and prose",
    "longDescription": "Kindling helps fiction writers go from outline to draft by providing a scaffolded writing environment where scene beats appear as expandable prompts."
  }
}
